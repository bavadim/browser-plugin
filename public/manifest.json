{
  "manifest_version": 3,
  "name": "BrowserAgentKit Page Customizer",
  "version": "0.1.0",
  "description": "Injects BrowserAgentKit to customize pages via chat.",
  "action": {
    "default_title": "Open Page Agent"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "webRequest"
  ]
}
